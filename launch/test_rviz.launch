<launch>
  <include file="$(find realsense2_camera)/launch/rs_t265.launch" >
    <arg name="enable_fisheye1"          value="false"/>
    <arg name="enable_fisheye2"          value="false"/>
    <arg name="fisheye_fps"              value="-1"/>
    <arg name="gyro_fps"                 value="-1"/>
    <arg name="accel_fps"                value="-1"/>
    <arg name="enable_gyro"              value="false"/>
    <arg name="enable_accel"             value="false"/>
    <arg name="publish_odom_tf"          value="false"/>
  </include>
  
  <include file="$(find rplidar_ros)/launch/rplidar.launch">
    <arg name="serial_port"         type="string" value="/dev/ttyUSB0"/>
    <arg name="serial_baudrate"     type="int"    value="115200"/>
    <arg name="frame_id"            type="string" value="camera_odom_frame"/>
    <arg name="inverted"            type="bool"   value="false"/>
    <arg name="angle_compensate"    type="bool"   value="true"/>
  </include>


  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find navigation)/rviz/default.rviz" required="true" />
</launch>
